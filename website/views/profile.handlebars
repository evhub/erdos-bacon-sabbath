<main>
  <figure class="portrait">
    <img src="/images/{{url_name}}/640x360.jpg" alt="{{copyright.title}} by {{copyright.author}} ({{copyright.license}})" width="640"
      height="360">
  </figure>
  <section class="profile">
    <h1 class="name">{{person.name}}</h1>
    <p class="bio">{{{person.bio}}}</p>
    <footer class="references">
      {{#each person.references}} <a href="{{url}}">{{source}}</a> {{/each}}
    </footer>
  </section>
  <ul class="accomplishments">
    {{#each person.fields}}{{> profile/field}}{{/each}}
  </ul>
  {{#if person.erdos}}
  <section class="erdos">
    <h2>Paths from {{person.name}} to Paul Erd≈ës</h2>
    {{#each person.erdos}} {{> profile/collaboration_path}} {{/each}}
  </section>
  {{/if}} {{#if person.bacon}}
  <section class="bacon">
    <h2>Paths from {{person.name}} to Kevin Bacon</h2>
    {{#each person.bacon}} {{> profile/collaboration_path}} {{/each}}
  </section>
  {{/if}} {{#if person.sabbath}}
  <section class="sabbath">
    <h2>Paths from {{person.name}} to Black Sabbath</h2>
    {{#each person.sabbath}} {{> profile/collaboration_path}} {{/each}}
  </section>
  {{/if}}
</main>
